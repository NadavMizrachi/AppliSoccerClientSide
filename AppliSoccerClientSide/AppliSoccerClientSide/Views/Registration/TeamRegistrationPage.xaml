<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppliSoccerClientSide.Views.Registration.TeamRegistrationPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.BackgroundColor="White"
             Shell.ForegroundColor="Black"
             Shell.NavBarHasShadow="False">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="25">
            <StackLayout Margin="0,0,0,80">
                <Label Text="Choose Team"
                       FontSize="Medium"
                       LineBreakMode="WordWrap"
                       CharacterSpacing="5" />
            </StackLayout>
            <Image  x:Name="TeamLogoImage"
                    WidthRequest="80"
                    HeightRequest="80" />
            <Picker x:Name="TeamPicker"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    WidthRequest="200"
                    SelectedIndexChanged="TeamPicker_SelectedIndexChanged"
                    Margin="0,0,0,10" />
            <Button Text="Continue"
                    Clicked="ContinueButton_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>